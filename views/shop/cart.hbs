<div class="jumbotron">
  <span class="price">Total: ${{totalPrice}}</span>
  <span class="pull-right"><a href="/">Back to shopping </a></span>
</div>


<div class="row">
  {{# each products}}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{this.imagePath}}" alt="..." class="img-responsive">
          <div class="caption">
            <h3>{{this.title}}</h3>
            <p class="description">{{this.description}}</p>
            <div class="clearfix">
              <h3>Total Price ${{this.total}}</h3>
              <a class="btn btn-danger btn-sm" href="/subtract/{{this.id}}"> - </a>
              <input type='text' name='quantity' value="{{this.qty}}" class='qty' readonly/>
              <a class="btn btn-success btn-sm" href="/add/{{this.id}}"> + </a>
              <a href="/remove/{{this.id}}" class="btn btn-warning pull-right" role="button">Remove from Cart</a>
            </div>
          </div>
        </div>
      </div>
  {{/each}}
</div>